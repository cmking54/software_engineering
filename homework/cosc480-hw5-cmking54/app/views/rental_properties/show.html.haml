#main.container
    .row
        .col-md-offset-1
        .col-md-4
            %h3.header.title= "#{@property.title}"
        .col-md-offset-1
        .col-md-offset-4
            %td.image= image_tag @property.image.url(:medium)

    .row
        .col-md-offset-2
        .col-md-8.description= "#{@property.description}"
    .row
        .col-md-offset-2
        .col-md-8= "Sleeps #{@property.maxpersons}, with #{@property.bedrooms} bedrooms, #{@property.beds} beds and #{@property.bathrooms} bathrooms. Pets are #{@property.pets_allowed ? '' : 'not'} allowed."
    .row
        .col-md-offset-2
        .col-md-4.distance= "#{@property.distance_from(@location) ? number_to_human(@property.distance_from(@location), units: {unit: 'mi'}) : 'Unknown distance' } away from you."
        .col-md-4.price= "#{number_to_currency(@property.price)} per night."

    %br
    %br

    .row
        .col-md-offset-1
        .col-md-2= link_to('Edit rental property details', edit_rental_property_path(@property))
        .col-md-2= link_to('Delete rental property', rental_property_path(@property), :method => :delete)
        .col-md-2= link_to('Back to rental properties list', rental_properties_path)
